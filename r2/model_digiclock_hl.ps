#include "common.h"
#include "sload.h"

uniform	float4 		m_digiclock;
uniform	float4 		m_affects;

f_deffer 	main	(p_flat I)
{
  f_deffer	O;
  half digit=m_digiclock.y;
  I.tcdh.x=digit+(I.tcdh.x*0.1);

  //diffuse
  half3 D=tbase		(I.tcdh);//IN: rgb.a

  //hemi,sun,material
  half 	ms=xmaterial;
#ifdef USE_LM_HEMI
	half4	lm=tex2D			(s_hemi,I.lmh);
//	half 	h=dot			(lm.rgb,1.h/3.h);
	half 	h=lm.a;
# ifdef USE_R2_STATIC_SUN
//		 	ms=lm.w;
			ms=lm.g;
# endif
#else
	half 	h=I.position.w;
# ifdef USE_R2_STATIC_SUN
		 	ms=I.tcdh.w;
# endif
#endif

	half noise=get_noise(I.tcdh*timers.z)*m_affects.x*m_affects.x*30;
	half4	t_noise=tex2D	(s_lmap,I.tcdh);
	D.rgb+=t_noise.rgb*noise+0.1;

	//2. Standart output
	O.Ne    =half4		(normalize((half3)I.N.xyz),	h);
	O.position=half4 	(I.position.xyz+O.Ne.xyz*def_virtualh/2.h,ms);
	O.C=half4		(D.rgb,							def_gloss);//OUT:rgb.gloss

	return O;
}

